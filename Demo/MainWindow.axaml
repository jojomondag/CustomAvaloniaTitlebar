<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Avalonia.FlexibleWindowControls.Controls"
        x:Class="DemoApp.MainWindow"
        Title="Custom Titlebar Demo"
        Width="800"
        Height="600"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="40">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <controls:CustomTitleBar x:Name="TitleBar"
                                 Grid.Row="0"
                                 TitleText="Custom Titlebar Demo"/>

        <!-- Main Content -->
        <Border Grid.Row="1"
                Background="{DynamicResource BackgroundBrush}">
            <StackPanel Margin="20"
                       Spacing="20"
                       VerticalAlignment="Center">
                <TextBlock Text="Welcome to the Custom Titlebar Demo!"
                          FontSize="24"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="This demonstrates the custom titlebar control with platform-specific window controls."
                          FontSize="16"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          Margin="0,10,0,0"/>
                <TextBlock Text="• macOS: Shows traffic light buttons on the left&#x0a;• Windows/Linux: Shows standard window controls on the right"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
                
                <Separator Margin="0,30,0,20"/>
                
                <TextBlock Text="Switch Titlebar Style:"
                          FontSize="18"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Spacing="10">
                    <Button Name="WindowsButton"
                           Content="Windows"
                           Padding="20,10"
                           Click="OnWindowsButtonClick"/>
                    <Button Name="MacOSButton"
                           Content="macOS"
                           Padding="20,10"
                           Click="OnMacOSButtonClick"/>
                    <Button Name="LinuxButton"
                           Content="Linux"
                           Padding="20,10"
                           Click="OnLinuxButtonClick"/>
                    <Button Name="AutoButton"
                           Content="Auto"
                           Padding="20,10"
                           Click="OnAutoButtonClick"/>
                </StackPanel>
                
                <!-- Large macOS Buttons Display Area -->
                <Border Name="IconDisplayArea"
                       Margin="0,30,0,0"
                       Padding="40"
                       Background="{DynamicResource BackgroundSecondaryBrush}"
                       CornerRadius="8"
                       HorizontalAlignment="Center"
                       MinWidth="300"
                       MinHeight="200"
                       IsVisible="False">
                    <controls:MacOSWindowButtons Name="LargeMacOSButtons"
                                                ButtonSize="48"
                                                ButtonSpacing="32"
                                                ShowIconsOnHover="False"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>

