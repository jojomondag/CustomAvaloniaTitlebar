<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DemoApp.Controls"
        x:Class="DemoApp.MainWindow"
        Title="Custom Titlebar Demo"
        Width="800"
        Height="600"
        WindowState="Normal"
        ShowInTaskbar="True"
        CanResize="True"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="40"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <controls:CustomTitleBar x:Name="TitleBar"
                                 Grid.Row="0"
                                 TitleText="Custom Titlebar Demo"/>

        <!-- Main Content -->
        <Border Grid.Row="1"
                Background="{DynamicResource BackgroundBrush}">
            <StackPanel Margin="20"
                       Spacing="20"
                       VerticalAlignment="Center">
                <TextBlock Text="Welcome to the Custom Titlebar Demo!"
                          FontSize="24"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="This demonstrates the custom titlebar control with platform-specific window controls."
                          FontSize="16"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          Margin="0,10,0,0"/>
                <TextBlock Text="• macOS: Shows traffic light buttons on the left&#x0a;• Windows/Linux: Shows standard window controls on the right"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
                

            </StackPanel>
        </Border>
    </Grid>
</Window>

